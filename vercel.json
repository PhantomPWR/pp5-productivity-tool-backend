{
    "version": 2,
    "builds": [
        {
            "src": "drf_api/wsgi.py",
            "use": "@vercel/python3.9.12",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9.12" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "drf_api/wsgi.py" }
    ]
}  